<!DOCTYPE html>
<html lang="cs">
<head>
<meta charset="UTF-8" />
<meta charset="UTF-8" />
<title>To Do / Done s posuvem</title>
<style>
 

  .tabs {
    display: flex;
    justify-content: center;
    gap: 40px;
    padding: 20px;
  }

  .tab {
    cursor: pointer;
    font-size: 1.2em;
    border-bottom: 3px solid transparent;
    padding-bottom: 6px; /* mezera mezi textem a linkou */
    transition: color 0.4s ease, border-color 0.4s ease;
  }

  .tab.todo.active {
    color: violet;
    border-color: violet;
  }

  .tab.done.active {
    color: white;
    border-color: white;
  }

  /* Kontejner pro posuvný obsah */
  .slider-container {
    width: 500px;
    margin: auto;
    overflow: hidden;
    position: relative;
  }

  /* Pás se všemi stránkami vedle sebe */
  .slider {
    display: flex;
    width: 100%;
    transition: transform 0.5s ease;
  }

  /* Každá stránka */
  .content {
    flex: 0 0 100%;
    padding: 20px;
    box-sizing: border-box;
  }
</style>
</head>
<body>

<div class="tabs">
  <div class="tab todo active" onclick="showTab('todo')">To Do</div>
  <div class="tab done" onclick="showTab('done')">Done</div>
</div>

<div class="slider-container">
  <div class="slider" id="slider">
    <div id="todoContent" class="content">
      <h2>Úkoly k dokončení</h2>
      <ul>
        <li>Uklidit pokoj</li>
        <li>Napsat zprávu</li>
        <li>Dokončit projekt</li>
      </ul>
    </div>
    <div id="doneContent" class="content">
      <h2>Hotové úkoly</h2>
      <ul>
        <li>Uvařit večeři</li>
        <li>Odeslat email</li>
      </ul>
    </div>
  </div>
</div>

<script>
  let activeTab = 'todo';

  function showTab(tab) {
    if (tab === activeTab) return;

    const slider = document.getElementById('slider');
    const tabs = document.querySelectorAll('.tab');

    // Posuneme slider podle zvolené záložky
    if (tab === 'todo') {
      slider.style.transform = 'translateX(0)';
    } else if (tab === 'done') {
      slider.style.transform = 'translateX(-100%)';
    }

    // Přepneme aktivní třídu u záložek
    tabs.forEach(t => t.classList.remove('active'));
    document.querySelector('.tab.' + tab).classList.add('active');

    activeTab = tab;
  }
</script>

</body>
</html>
